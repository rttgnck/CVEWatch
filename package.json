{
  "name": "cve-watch",
  "displayName": "CVE Watch",
  "description": "Track CVEs for products you care about and scan your projects for vulnerable dependencies",
  "version": "1.0.3",
  "publisher": "intek",
  "repository": {
    "type": "git",
    "url": "https://github.com/rttgnck/cvewatch"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Linters"
  ],
  "keywords": [
    "cve",
    "security",
    "vulnerability",
    "nvd",
    "dependencies"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "icon": "assets/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "cveWatch.openPanel",
        "title": "CVE Watch: Open Panel",
        "icon": "$(shield)"
      },
      {
        "command": "cveWatch.refresh",
        "title": "CVE Watch: Refresh CVEs",
        "icon": "$(refresh)"
      },
      {
        "command": "cveWatch.scanWorkspace",
        "title": "CVE Watch: Scan Workspace for Dependencies"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cveWatch",
          "title": "CVE Watch",
          "icon": "assets/icon.svg"
        }
      ]
    },
    "views": {
      "cveWatch": [
        {
          "type": "webview",
          "id": "cveWatch.mainView",
          "name": "CVE Watch"
        }
      ]
    },
    "configuration": {
      "title": "CVE Watch",
      "properties": {
        "cveWatch.products": {
          "type": "array",
          "default": [],
          "description": "List of products to track CVEs for"
        },
        "cveWatch.pollInterval": {
          "type": "number",
          "default": 30,
          "minimum": 15,
          "maximum": 1440,
          "description": "How often to check for new CVEs (in minutes)"
        },
        "cveWatch.notifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for critical CVEs"
        },
        "cveWatch.autoScanWorkspace": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan workspace for dependencies on startup"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "cveWatch.refresh",
          "when": "view == cveWatch.mainView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "package": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.2.2",
    "esbuild": "^0.24.2",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "dompurify": "^3.3.1"
  }
}
