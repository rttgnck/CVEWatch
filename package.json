{
  "name": "cve-watch",
  "version": "1.0.1",
  "description": "A macOS menu bar app for tracking CVEs on products you care about",
  "main": "main-process/main.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "vite build && electron-builder",
    "build:vite": "vite build",
    "build:icons": "node scripts/generate-app-icons.js",
    "preview": "vite preview",
    "preview:electron": "npm run build:vite && NODE_ENV=production electron ."
  },
  "author": "intek",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^33.4.11",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "vite": "^5.4.21",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "dompurify": "^3.3.1",
    "electron-store": "^8.1.0",
    "framer-motion": "^10.17.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "build": {
    "appId": "com.cvewatch.app",
    "productName": "CVE Watch",
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "LSUIElement": true,
        "LSBackgroundOnly": false
      }
    },
    "dmg": {
      "icon": "assets/icon.icns",
      "title": "${productName} ${version}",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      }
    },
    "files": [
      "dist/index.html",
      "dist/assets/**/*",
      "main-process/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "release"
    }
  }
}
